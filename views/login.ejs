<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<% include ../views/partials/title %>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/login" method="post">
		<div class="form-group">
			<label>Email</label>
			<input id="emailInput "required type="text" class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Senha</label>
			<input id="senhaInput" required type="password" class="form-control" name="password">
		</div>

		<button id="entrarBtn" type="submit" class="btn btn-warning btn-lg">Entrar</button>
    <button id="limparBtn" type="reset" class="btn btn-warning btn-lg">Limpar</button>
	</form>

	<hr>
	<a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Login com Facebook</a>
	<p>Necessita um cadastro? <a href="/cadastrar">Cadastrar Usu√°rio</a></p>

</div>

</div>
</body>
</html>
